{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-5 mt-4 text-center">

{% for flash in app.flashes("Success") %}
    <p class="alert alert-primary">{{ flash }}</p>
{% endfor %}
{% for flash in app.flashes("Error") %}
    <p class="alert alert-danger">{{ flash }}</p>
{% endfor %}

<h3 class="text text-primary"> Student List </h3>
<a class="btn btn-primary" href="{{ path('student_add') }}">Add new student</a>
<table class="table table-success mt-3">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Student Name</th>
            <th>Student Avatar</th>
            <th>Menu</th>
        </tr>
    </thead>
    <tbody>
    {% for student in student %}
        <tr>
            <td>{{ student.id }}</td>
            <td>{{ student.name }}</td>
            <td>
                <a href="{{ path('student_detail' , {'id' : student.id }) }}">
                    <img src="{{ student.image }}" width="100" height="100">
                </a>
            </td>
            <td>
                <a class="btn btn-warning" href="{{ path('student_edit' , {'id' : student.id }) }}">Edit</a>
                <a class="btn btn-danger" href="{{ path('student_delete' , {'id' : student.id }) }}"
                onclick="return confirm('Do you want to delete this student ?');"
                >
                Delete</a>
            </td>
        </tr>
    {% endfor %} 
    </tbody>
</table>
</div>
{% endblock %}
