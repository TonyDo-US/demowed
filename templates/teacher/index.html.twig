{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-5 mt-4 text-center">

{% for flash in app.flashes("Success") %}
    <p class="alert alert-primary">{{ flash }}</p>
{% endfor %}
{% for flash in app.flashes("Error") %}
    <p class="alert alert-danger">{{ flash }}</p>
{% endfor %}

<h3 class="text text-primary"> Teacher List </h3>
<a class="btn btn-primary" href="{{ path('teacher_add') }}">Add new Teacher</a>
<h1>total teacher: {{total}}</h1>
<table class="table table-success mt-3">
    <thead>
        <tr>
            <th>Teacher ID</th>
            <th>Teacher Name</th>
            <th>Email</th>
            <th>Image</th>
            <th>Gender</th>
            <th>Menu</th>
        </tr>
    </thead>
    <tbody>
    {% for teacher in teachers %}
        <tr>
            <td>{{ teacher.id }}</td>
            <td>{{ teacher.name }}</td>
            <td>
                <a href="{{ path('teacher_detail' , {'id' : teacher.id }) }}">
                    {{ teacher.email }}
                </a>
            </td>
            <td>
            <img src="{{teacher.image}}" alt="" height="100px">
            </td>
            
            <td>{{teacher.gender}}</td>
            <td>
                <a class="btn btn-warning" href="{{ path('teacher_edit' , {'id' : teacher.id }) }}">Edit</a>
                <a class="btn btn-danger" href="{{ path('teacher_delete' , {'id' : teacher.id }) }}"
                onclick="return confirm('Do you want to delete this teacher ?');"
                >
                Delete</a>
            </td>
        </tr>
    {% endfor %} 
    </tbody>
</table>
</div>
{% endblock %}